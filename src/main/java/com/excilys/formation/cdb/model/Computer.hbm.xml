<?xml version="1.0"?><!DOCTYPE hibernate-mapping
  PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="Computer" table="computer">
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="name" type="string" not-null="true" />
		<property name="introduced" type="date" />
		<property name="discontinued" type="date" />
		<property name="company" type="string" />
		<one-to-one name="person" class="Person" />
		<many-to-one name="id"
			class="com.excilys.formation.cdb.model.Company" column="company_id" />
	</class>
</hibernate-mapping>